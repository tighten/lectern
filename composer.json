{
    "name": "tighten/lectern",
    "description": "A headless forum package for Laravel",
    "keywords": ["laravel", "forum", "api", "headless"],
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/tighten/lectern",
    "support": {
        "issues": "https://github.com/tighten/lectern/issues",
        "source": "https://github.com/tighten/lectern"
    },
    "authors": [
        {
            "name": "Tighten",
            "email": "hello@tighten.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/http": "^12.0",
        "illuminate/routing": "^12.0",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "tightenco/duster": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Tightenco\\Lectern\\": "src/",
            "Tightenco\\Lectern\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tightenco\\Lectern\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tightenco\\Lectern\\LecternServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest",
        "lint": "duster lint",
        "fix": "duster fix"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
